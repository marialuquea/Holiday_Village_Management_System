        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="NewCustomer" Height="350" Width="400">
    <Grid>
        <Label Content="New customer" HorizontalAlignment="Left" Margin="148,46,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="106,100,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxName" HorizontalAlignment="Left" Height="23" Margin="186,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
