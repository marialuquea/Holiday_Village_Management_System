        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="152,199,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="10,284,0,0" VerticalAlignment="Top" Width="75" Click="btnBack_Click"/>
